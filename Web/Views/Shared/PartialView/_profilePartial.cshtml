@using System.Security.Claims;

@if (User.Identity.IsAuthenticated)
{
    string email = User.FindFirst(ClaimTypes.Email)?.Value;

    if (!string.IsNullOrEmpty(email))
    {
        <li class="nav-item">
            <div class="profile">
                <span class="ec-btn-title text-dark">Hello</span>
                <span class="ec-btn-stitle text-dark">@email</span>
            </div>
        </li>

        <li class="nav-item">
            <div class="profile">
                <a asp-controller="Account" asp-action="Logout" class="ec-btn-stitle text-dark">LogOut</a>
            </div>
        </li>
    }
}
else
{
    <li class="nav-item">
        <div class="profile">
            <a asp-controller="Account" asp-action="Login" class="ec-btn-stitle text-dark">Login</a>
        </div>
    </li>

    <li class="nav-item">
        <div class="profile">
            <a asp-controller="Account" asp-action="Register" class="ec-btn-stitle text-dark">Register</a>
        </div>
    </li>
}
