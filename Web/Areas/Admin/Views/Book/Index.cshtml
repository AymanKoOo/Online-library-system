@{
    int nextPage = @Model.CurrentPage + 1;
    int prevPage = @Model.CurrentPage - 1;
}

@model Web.Areas.Admin.ViewModels.Book.ABookList

<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="text-center"><font style="vertical-align: inherit;"> Books  </font><b><font style="vertical-align: inherit;">Details </font></b></h2>
                </div>
            </div>
        </div>

        <form method="post" asp-controller="Product" asp-action="Index">
            <input type="hidden" value="" name="products" />

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th><font style="vertical-align: inherit;">Id</font></th>
                        <th><font style="vertical-align: inherit;">Title</font></th>
                        <th><font style="vertical-align: inherit;">Description</font></th>
                        <th><font style="vertical-align: inherit;">Author</font></th>
                        <th><font style="vertical-align: inherit;">Publisher</font></th>
                        <th><font style="vertical-align: inherit;">Published Date</font></th>
                        <th><font style="vertical-align: inherit;">ISBN</font></th>
                        <th><font style="vertical-align: inherit;">Genre</font></th>
                        <th><font style="vertical-align: inherit;">InStock</font></th>
                        <th><font style="vertical-align: inherit;">Quantity</font></th>
                        <th><font style="vertical-align: inherit;">Available Quantity</font></th>
                        <th><font style="vertical-align: inherit;">Actions</font></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var p in Model.Data)
                    {

                        <tr>
                            <td><font style="vertical-align: inherit;">@p.Id </font></td>
                            <td><font style="vertical-align: inherit;">@p.Title  </font></td>
                            <td><font style="vertical-align: inherit;">@p.Description </font></td>
                            <td><font style="vertical-align: inherit;">@p.Author  </font></td>
                            <td><font style="vertical-align: inherit;">@p.Publisher  </font></td>
                            <td><font style="vertical-align: inherit;">@p.PublishedDate  </font></td>
                            <td><font style="vertical-align: inherit;">@p.ISBN  </font></td>
                            <td><font style="vertical-align: inherit;">@p.Genre  </font></td>
                            <td><font style="vertical-align: inherit;">@p.InStock  </font></td>
                            <td><font style="vertical-align: inherit;">@p.Quantity  </font></td>
                            <td><font style="vertical-align: inherit;">@p.AvailableQuantity  </font></td>
                            <td>
                                <a asp-controller="Book" asp-action="Edit" asp-route-bookID="@p.Id">Edit</a>
                                <a asp-controller="Book" asp-action="Delete" asp-route-bookID="@p.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>



        <div id="pag">
            <ul>

                @if (Model.HasPrevious == true)
                {
                    <li> <a class="page-link prev" asp-controller="Book" asp-action="Index" asp-route-pageNumber="@prevPage">Prev</a></li>
                }
                else
                {
                    <li class="disabled prev"> <a class="page-link" asp-controller="Book" asp-action="Index" asp-route-pageNumber="@prevPage">Prev</a></li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="disabled"> <a class="page-link" asp-controller="Book" asp-action="Index" asp-route-pageNumber="@i">@i</a></li>
                    }
                    else
                    {
                        <li> <a class="page-link" asp-controller="Book" asp-action="Index" asp-route-pageNumber="@i">@i</a></li>
                    }
                }

                @if (Model.HasNext == true)
                {
                    <li>
                        <a class="page-link next" asp-controller="Book" asp-action="Index" asp-route-pageNumber="@nextPage">Next</a>
                    </li>
                }
                else
                {
                    <li class="disabled">
                        <a class="page-link next" asp-controller="Deals" asp-action="Index" asp-route-pageNumber="@nextPage">Next</a>
                    </li>
                }
            </ul>

        </div>

    </div>
</div>

