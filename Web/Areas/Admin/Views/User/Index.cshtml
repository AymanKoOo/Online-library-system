@model IQueryable<Core.Entites.others.UserWithRoles>


<div class="table-responsive">
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-12">
                    <h2 class="text-center"><font style="vertical-align: inherit;">Users  </font><b><font style="vertical-align: inherit;">Details </font></b></h2>
                </div>
            </div>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th><font style="vertical-align: inherit;"># </font></th>
                    <th><font style="vertical-align: inherit;">Name  </font></th>
                    <th><font style="vertical-align: inherit;">Email </font></th>
                    <th><font style="vertical-align: inherit;"> Role </font></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {

                    <tr>
                        <td><font style="vertical-align: inherit;"># </font></td>
                        <td><font style="vertical-align: inherit;">@user.UserName </font></td>
                        <td><font style="vertical-align: inherit;">@user.Email  </font></td>
                        <td><font style="vertical-align: inherit;">@user.Role </font></td>

                        <td>
                            <a asp-controller="User" asp-action="Delete" asp-route-UserID="@user.UserId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>